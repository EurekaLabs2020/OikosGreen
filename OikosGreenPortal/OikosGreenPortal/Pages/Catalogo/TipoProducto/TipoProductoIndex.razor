@page "/catalogo/tipoproducto"

@inherits TipoProductoIndexBase

<TituloComponent _titulo="Tipo Producto"></TituloComponent>
<div class="container">
    <div class="row">
        <DataGrid TItem="TipoProducto_data" Data="@_lista" @bind-SelectedRow="@_regActual" ShowPager="true"
                  Filterable="true" FilterMethod="DataGridFilterMethod.Contains" PageSize="5" Editable="true"
                  EditMode="DataGridEditMode.Popup" RowStyling="@estilofila" SelectedRowStyling="@filaSeleccionada">
            <FirstPageButtonTemplate>
                <span>Prim</span>
                <DataGridCommandColumn TItem="TipoProducto_data">
                    <NewCommandTemplate>
                        <Button Color="Color.Success" Clicked="@context.Clicked" class="btn-create">Crear</Button>
                    </NewCommandTemplate>
                    <EditCommandTemplate>
                        <Button Color="Color.Primary" Clicked="@context.Clicked" class="edit-button">Editar</Button>
                    </EditCommandTemplate>
                    <DeleteCommandTemplate>
                        <Button Color="Color.Danger" Clicked="@context.Clicked">Incativar</Button>
                    </DeleteCommandTemplate>
                    <ClearFilterCommandTemplate>
                        <span>Limpiar Filtro</span>
                    </ClearFilterCommandTemplate>
                </DataGridCommandColumn>
                <DataGridColumn TItem="TipoProducto_data" Field="@nameof(TipoProducto_data.id)" Caption="Id" Sortable="false" />
                <DataGridColumn TItem="TipoProducto_data" Field="@nameof(TipoProducto_data.name)" Caption="Nombre" Editable="true" />
                <DataGridCheckColumn TItem="TipoProducto_data" Field="@nameof(TipoProducto_data.active)" Caption="Activo" Editable="true" />
            </FirstPageButtonTemplate>
            <PreviousPageButtonTemplate>
                <span>Ant</span>
            </PreviousPageButtonTemplate>
            <NextPageButtonTemplate>
                <span>Sig</span>
            </NextPageButtonTemplate>
            <LastPageButtonTemplate>
                <span>Ult</span>
            </LastPageButtonTemplate>
        </DataGrid>
    </div>
</div>


