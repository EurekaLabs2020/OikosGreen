@page "/reporte/movimiento"

@inherits MovimientoIndexBase
@attribute [Authorize]


    <TituloComponent _titulo="Reporte de Movimiento"></TituloComponent>

    <div class="container row-spacing-bottom">
        <div class="row margen-sup">


            <Tabs SelectedTab="@selectedTab" SelectedTabChanged="@OnSelectedTabChanged">
                <Items>
                    <Tab Name="home">Home</Tab>
                    <Tab Name="profile">Profile</Tab>
                    <Tab Name="messages">Messages</Tab>
                    <Tab Name="settings">Settings</Tab>
                </Items>
                <Content>
                    <TabPanel Name="home">
                        Content for home.
                    </TabPanel>
                    <TabPanel Name="profile">
                        Content for profile.
                    </TabPanel>
                    <TabPanel Name="messages">
                        Content for messages.
                    </TabPanel>
                    <TabPanel Name="settings">
                        Content for settings.
                    </TabPanel>
                </Content>
            </Tabs>
            </div>
        </div>

            @code{
                string selectedTab = "profile";

                private void OnSelectedTabChanged(string name)
                {
                    selectedTab = name;
                }
            }




